<section id="about" class="container mx-auto p-4 py-16">
  <h2 class="text-3xl font-bold mb-8 bg-gradient-to-r from-blue-600 to-purple-600 text-transparent bg-clip-text">About Me</h2>
  
  <div class="grid md:grid-cols-2 gap-8">
    <div class="space-y-6" data-aos="fade-right" data-aos-duration="1000">
      <h3 class="text-2xl font-semibold bg-gradient-to-r from-blue-500 to-blue-700 text-transparent bg-clip-text">Education</h3>
      <div class="space-y-4">
        <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 border-l-4 border-blue-500">
          <div class="flex justify-between items-start">
            <div>
              <h4 class="text-xl font-semibold hover:text-blue-600 transition-colors">California State University, Fullerton</h4>
              <p class="text-gray-600">Master of Science in Information Systems</p>
            </div>
            <div class="text-right">
              <p class="text-gray-600 bg-blue-50 px-3 py-1 rounded-full text-sm">Expected 2025</p>
              <p class="text-green-600 font-semibold mt-2">GPA: 3.74</p>
            </div>
          </div>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 border-l-4 border-purple-500" data-aos="fade-up" data-aos-delay="100">
          <div class="flex justify-between items-start">
            <div>
              <h4 class="text-xl font-semibold hover:text-purple-600 transition-colors">Rajasthan Technical University</h4>
              <p class="text-gray-600">Bachelor of Science in Computer Science</p>
            </div>
            <div class="text-right">
              <p class="text-gray-600 bg-purple-50 px-3 py-1 rounded-full text-sm">Graduated 2020</p>
              <p class="text-green-600 font-semibold mt-2">CGPA: 7/10</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="space-y-6" data-aos="fade-left" data-aos-duration="1000">
      <h3 class="text-2xl font-semibold bg-gradient-to-r from-purple-500 to-purple-700 text-transparent bg-clip-text">Skills</h3>
      <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
        <div class="space-y-6">
          <div>
            <h4 class="font-semibold mb-3 text-lg bg-gradient-to-r from-blue-500 to-purple-500 text-transparent bg-clip-text">Languages</h4>
            <div class="flex flex-wrap gap-2">
              <span class="px-4 py-2 bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-full hover:scale-105 transition-transform cursor-default">Python</span>
              <span class="px-4 py-2 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-full hover:scale-105 transition-transform cursor-default">SQL</span>
              <span class="px-4 py-2 bg-gradient-to-r from-blue-700 to-blue-800 text-white rounded-full hover:scale-105 transition-transform cursor-default">JavaScript</span>
            </div>
          </div>
          
          <div>
            <h4 class="font-semibold mb-3 text-lg bg-gradient-to-r from-purple-500 to-blue-500 text-transparent bg-clip-text">Libraries & Frameworks</h4>
            <div class="flex flex-wrap gap-2">
              <span class="px-4 py-2 bg-gradient-to-r from-purple-500 to-purple-600 text-white rounded-full hover:scale-105 transition-transform cursor-default">pandas</span>
              <span class="px-4 py-2 bg-gradient-to-r from-purple-600 to-purple-700 text-white rounded-full hover:scale-105 transition-transform cursor-default">NumPy</span>
              <span class="px-4 py-2 bg-gradient-to-r from-purple-700 to-purple-800 text-white rounded-full hover:scale-105 transition-transform cursor-default">Matplotlib</span>
              <span class="px-4 py-2 bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-full hover:scale-105 transition-transform cursor-default">FastAPI</span>
              <span class="px-4 py-2 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-full hover:scale-105 transition-transform cursor-default">scikit-learn</span>
              <span class="px-4 py-2 bg-gradient-to-r from-blue-700 to-blue-800 text-white rounded-full hover:scale-105 transition-transform cursor-default">Hugging Face</span>
              <span class="px-4 py-2 bg-gradient-to-r from-purple-500 to-purple-600 text-white rounded-full hover:scale-105 transition-transform cursor-default">LlamaIndex</span>
            </div>
          </div>

          <div>
            <h4 class="font-semibold mb-3 text-lg bg-gradient-to-r from-blue-500 to-purple-500 text-transparent bg-clip-text">Data Science & ML</h4>
            <div class="flex flex-wrap gap-2">
              <span class="px-4 py-2 bg-gradient-to-r from-blue-500 to-purple-500 text-white rounded-full hover:scale-105 transition-transform cursor-default">Statistics & Probability</span>
              <span class="px-4 py-2 bg-gradient-to-r from-purple-500 to-blue-500 text-white rounded-full hover:scale-105 transition-transform cursor-default">A/B Testing</span>
              <span class="px-4 py-2 bg-gradient-to-r from-blue-500 to-purple-500 text-white rounded-full hover:scale-105 transition-transform cursor-default">ETL & Data Wrangling</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 