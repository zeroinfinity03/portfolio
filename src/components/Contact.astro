<section id="contact" class="container mx-auto p-4 py-16">
  <h2 class="text-4xl font-bold mb-12 bg-gradient-to-r from-blue-400 to-purple-400 text-transparent bg-clip-text">Contact Me</h2>
  
  <div class="grid md:grid-cols-2 gap-8">
    <div class="space-y-6" data-aos="fade-right">
      <h3 class="text-2xl font-semibold text-gray-100">Get in Touch</h3>
      <p class="text-gray-400 text-lg">Feel free to reach out for collaborations or just a friendly hello!</p>
      <div class="space-y-4">
        <a href="mailto:vik03surya@gmail.com" 
          class="flex items-center gap-3 bg-slate-800/50 backdrop-blur-md p-4 rounded-xl shadow-lg hover:shadow-blue-500/10 border border-slate-700/50 transition-all group hover:-translate-y-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
          </svg>
          <span class="text-gray-300 group-hover:text-blue-400 transition-colors">vik03surya@gmail.com</span>
        </a>

        <div class="flex items-center gap-3 bg-slate-800/50 backdrop-blur-md p-4 rounded-xl shadow-lg border border-slate-700/50 group hover:-translate-y-1 transition-all">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
          </svg>
          <span class="text-gray-300">+1(714)253-2411</span>
        </div>

        <div class="flex items-center gap-3 bg-slate-800/50 backdrop-blur-md p-4 rounded-xl shadow-lg border border-slate-700/50 group hover:-translate-y-1 transition-all">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
          </svg>
          <span class="text-gray-300">Fullerton, CA</span>
        </div>
      </div>
    </div>

    <form 
      class="space-y-4 bg-slate-800/50 backdrop-blur-md p-8 rounded-xl shadow-lg border border-slate-700/50" 
      data-aos="fade-left"
      name="contact"
      method="POST"
      data-netlify="true"
      netlify-honeypot="bot-field"
    >
      <p class="hidden">
        <label>
          Don't fill this out if you're human: <input name="bot-field" />
        </label>
      </p>
      
      <input type="hidden" name="form-name" value="contact" />
      
      <div>
        <label for="name" class="block text-sm font-medium text-gray-300">Name</label>
        <input type="text" name="name" id="name" required 
          class="mt-1 block w-full rounded-lg bg-slate-900/50 border-slate-700 text-gray-100 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition-all">
      </div>
      
      <div>
        <label for="email" class="block text-sm font-medium text-gray-300">Email</label>
        <input type="email" name="email" id="email" required 
          class="mt-1 block w-full rounded-lg bg-slate-900/50 border-slate-700 text-gray-100 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition-all">
      </div>
      
      <div>
        <label for="message" class="block text-sm font-medium text-gray-300">Message</label>
        <textarea name="message" id="message" rows="4" required
          class="mt-1 block w-full rounded-lg bg-slate-900/50 border-slate-700 text-gray-100 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition-all"></textarea>
      </div>
      
      <button type="submit" 
        class="w-full bg-blue-600/20 text-blue-400 border border-blue-500/50 px-6 py-2 rounded-lg hover:bg-blue-600/30 transition-all transform hover:-translate-y-1">
        Send Message
      </button>
    </form>
  </div>
</section> 