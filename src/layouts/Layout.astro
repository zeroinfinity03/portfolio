---
interface Props {
  title: string;
}

const { title } = Astro.props;
import { ViewTransitions } from 'astro:transitions';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <ViewTransitions />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js" is:inline></script>
    <style is:inline>
      .animated-gradient {
        background: linear-gradient(
          -45deg, 
          #0f172a,  /* Dark blue */
          #1e293b,  /* Slate blue */
          #0f172a,  /* Dark blue */
          #1e1b4b   /* Dark indigo */
        );
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
      }

      .mesh-gradient {
        background-color: #0f172a;
        background-image: 
          radial-gradient(at 40% 20%, hsla(228,100%,74%,0.15) 0px, transparent 50%),
          radial-gradient(at 80% 0%, hsla(189,100%,56%,0.15) 0px, transparent 50%),
          radial-gradient(at 0% 50%, hsla(355,100%,93%,0.15) 0px, transparent 50%),
          radial-gradient(at 80% 50%, hsla(340,100%,76%,0.15) 0px, transparent 50%),
          radial-gradient(at 0% 100%, hsla(269,100%,77%,0.15) 0px, transparent 50%),
          radial-gradient(at 80% 100%, hsla(242,100%,70%,0.15) 0px, transparent 50%),
          radial-gradient(at 0% 0%, hsla(343,100%,76%,0.15) 0px, transparent 50%);
      }

      .grid-pattern {
        background-image: 
          linear-gradient(rgba(255, 255, 255, 0.05) 1px, transparent 1px),
          linear-gradient(90deg, rgba(255, 255, 255, 0.05) 1px, transparent 1px);
        background-size: 30px 30px;
      }

      @keyframes gradient {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
      }

      /* Custom scrollbar */
      ::-webkit-scrollbar {
        width: 10px;
      }
      ::-webkit-scrollbar-track {
        background: #1e293b;
      }
      ::-webkit-scrollbar-thumb {
        background: #3b82f6;
        border-radius: 5px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: #2563eb;
      }
    </style>
  </head>
  <body class="min-h-screen text-gray-100 mesh-gradient">
    <!-- Grid pattern overlay -->
    <div class="fixed inset-0 -z-5 grid-pattern opacity-30"></div>

    <nav class="fixed w-full bg-slate-900/50 backdrop-blur-md shadow-lg z-50 border-b border-slate-800/50">
      <div class="container mx-auto p-4">
        <ul class="flex gap-6 justify-end">
          <li><a href="#home" class="text-gray-300 hover:text-blue-400 transition-colors font-medium">Home</a></li>
          <li><a href="#about" class="text-gray-300 hover:text-blue-400 transition-colors font-medium">About</a></li>
          <li><a href="#experience" class="text-gray-300 hover:text-blue-400 transition-colors font-medium">Experience</a></li>
          <li><a href="#projects" class="text-gray-300 hover:text-blue-400 transition-colors font-medium">Projects</a></li>
          <li><a href="#contact" class="text-gray-300 hover:text-blue-400 transition-colors font-medium">Contact</a></li>
        </ul>
      </div>
    </nav>

    <main class="relative">
      <slot />
    </main>

    <div class="fixed bottom-4 right-4 z-50">
      <a href="#home" 
        class="bg-slate-800/50 backdrop-blur-md p-3 rounded-full shadow-lg hover:shadow-blue-500/20 transition-all hover:-translate-y-1">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
        </svg>
      </a>
    </div>

    <script>
      AOS.init({
        duration: 800,
        once: true,
        offset: 100,
        easing: 'ease-out-cubic'
      });
    </script>
  </body>
</html> 